
<div class="container">

<% provide(:title, "Sign in") %>
<h1 align="center">Sign in</h1>

   <div class="form-group">
    
      <%= form_for(:session, url: session_index_path) do |f| %>
      
         <div class="form-group">
            <%= f.label :Username %>
            <%= f.text_field :name , class: "form-control" ,:placeholder => "Enter Username"%>
         </div>
      
         <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password , class: "form-control",:placeholder => "Enter password"%>
         </div>
            <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
    </div>
    
 
 <div align="center">
 <% flash.each do |name, message| %>
        <%= content_tag :div, message, id: "error_explanation_#{name}"  %>
 <% end %>
</div>

</div>



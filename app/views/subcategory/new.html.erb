<% provide(:title, 'Add New SubCategory') %>
<div class="container containerwidth" style="background-color:#ffffff;border:1px solid #dedede;box-shadow:2px 2px 2px 2px #dedede;">

<h1 align="center">Add New Category</h1>

 <div class="form-group formwidth">
   <%#= form_form :category, url: category_index_path do |f| %>
   <%= form_for @subcategory, url: subcategory_index_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
       <div class="form-group">
      <%= f.label :Parent_Category %>
      <%= f.collection_select(:parent, Subcategory.where(:parent=>'root') , :subcategory_name, :subcategory_name ,:include_blank => 'root') %>
 </div>
 <div class="form-group">
      <%=f.label :Category_name %>
      <%=f.text_field :subcategory_name %>
           </div>
            <div class="form-group">
      <%= f.submit "Add", class: "btn btn-large btn-primary" %>
    <% end %>
    </div>
    </div>
</div>
<% if (signed_in? && current_user.role=='sadmin') %>
<div style="float:right;margin-right:30px;">
<%= link_to 'Add new user', admin_users_new_path , :class => 'btn btn-success btn-lg'%>
<% end %>
</div>
<div style="float:left;margin-left:30px;">
        <%= form_tag admin_users_path, :method => :get do %>
        <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :name => nil,:class => 'btn btn-success btn-lg' %>
        </p>
        <% end %>
    </div>
<h1 align="center">User List</h1>
<div class="table-responsive">
<%= will_paginate %>
  <table class="table table-bordered table table-hover table table-striped tablewidth">

<tr>

<th><%= link_to 'Name', :sort=>"name"%></th>
<th><%= link_to 'Role', :sort=>"role"%></th>
<th colspan="2">Action</th>
 <% @admin.each do |u| %>
 <%if u.role=='sadmin'%>
 <%else%>
<tr>

<td><%=u.name%></td>
<td><%=u.role%></td>
<td colspan="2">
	<%= link_to 'Edit', edit_admin_path(u) , :class => 'btn btn-success btn-lg' %> &nbsp;&nbsp;&nbsp;
	<%= link_to 'Delete', admin_path(u),:class => 'btn btn-danger btn-lg',
                    method: :delete, data: { confirm: 'Are you sure?' } %> 
</td>
</tr>


<%end%>
<%end%>
</table>
<%= will_paginate %>
</div>
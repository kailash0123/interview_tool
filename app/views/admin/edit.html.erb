<h1>User Edit</h1>
<center>
<div class="row">
  <div class="span6 offset3">
     <%= form_for :user do |f| %>
       <%#= render 'shared/error_messages', object: f.object  %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :role %>
      <%= f.select(:role, options_for_select([['Admin', 'admin'], ['User', 'user']])) %>

      <%= f.label :category %>
      <%= f.collection_select(:category, Category.all, :id, :category_name ) %>
     
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.submit "Submit Edit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</center>